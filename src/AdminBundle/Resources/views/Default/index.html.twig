{% extends 'AdminBundle::layout.html.twig' %}


{% block stylesheets %}
    <!--glyphicons-->
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.1/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="{{ asset('bundles/admin/css/bootstrap.css') }}"/>
    <link rel="stylesheet" href="{{ asset('bundles/admin/css/events.css') }}"/>
    <link rel="stylesheet" href="{{ asset('bundles/admin/css/main.css') }}"/>
    <link rel="stylesheet" href="{{ asset('bundles/admin/css/filter-form.css') }}"/>
    <link rel="stylesheet" href="{{ asset('bundles/admin/css/header.css') }}"/>
    {#    <link rel="stylesheet" href="{{ asset('bundles/admin/css/select2.css') }}"/>#}
{% endblock %}



{% block body %}
    <div class="container">
        {#FILTER#}
        <div class="filter-form">
            <div class="col-sm-3">
                <select class="selectpicker" id="car-type" title="Alege marca masini">
                    {% for entity in entities %}
                        <option>{{ entity.carMaker }}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="col-sm-3">
                <select class="selectpicker" id="car-model" title="Alege modelul masini" data-live-search="true" disabled>
                    {% for entity in entities %}
                        <option>{{ entity.carModel }}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="col-sm-3">
                <select class="selectpicker" id="car-year" title="Alege anul masini" data-live-search="true">
                    {% set minYear = "now - 50 years"|date("Y") %}
                    {% set maxYear = "now"|date("Y") %}
                    {% for year in maxYear..minYear %}
                        <option>{{ year }}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="col-sm-3">
                <select class="selectpicker" id="car-year" title="Alege piesa" data-live-search="true">
                    <option>Mustard</option>
                    <option>Ketchup</option>
                    <option>Relish</option>
                </select>
            </div>

            <div class='col-sm-2 checkbox'>
                <input name='remember' type="checkbox" id="checkbox"/>
                <label for="checkbox">Stock</label>
            </div>

            <button id="search_button" type="submit" class="btn btn-primary">Search</button>
        </div>



        {% for entity in entities %}
            <div class="events box">

                {% if entity.stock <= 0 %}
                    <div class="ribbon ribbon-sold-out"><span>SOLD OUT</span></div>
                {% else %}
                    <div class="ribbon ribbon-new"><span>New</span></div>
                {% endif %}


                <article>
                    <header class="map-container">
                        {% if entity.imageName is empty %}
                            <img src="{{ asset('bundles/admin/images/jedi.png') }}"/>
                        {% else %}
                            <img src="{{ asset('uploads/products/' ~entity.imageName) }}"/>
                        {% endif %}
                    </header>
                    <section>
                        <h3>
                            {#                                <a href="{{ path('event_show', {'id': entity.id}) }}">{{ entity.productName }}</a>#}
                        </h3>

                        <dl>
                            <dt>Model:</dt>
                            <dd>{{ entity.carMaker }}</dd>

                            <dt>Model:</dt>
                            <dd>{{ entity.carModel }}</dd>

                            <dt>Details:</dt>
                            <dd>{{ entity.description }}</dd>
                            <dd>{{ entity.created.format('Y-m-d') }}</dd>
                            <dd>{{ entity.stock }}</dd>

                        </dl>
                    </section>
                </article>
            </div>
        {% endfor %}

{#        {% for make in makers %}
            <dd>{{ make.code }}</dd>
        {% endfor %}#}

    </div>
{% endblock %}



